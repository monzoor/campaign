{
    "extends": "react-app",
    "rules": {
        "react/prop-types": 0,
        "react/no-did-update-set-state": 0,
        "no-nested-ternary": 0,
        "no-console": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/prefer-stateless-function": 0,
        "react/jsx-indent": [2, 4],
        "max-len": 0,
        "indent": [2, 4, { "ignoredNodes": ["JSXElement *"] }],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "always"]
    }
}
