{
    "name": "method",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "node-sass": "^4.12.0",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-scripts": "3.1.2"
    },
    "devDependencies": {
        "eslint-config-prettier": "^6.3.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-prettier": "^3.1.1",
        "pre-commit": "^1.2.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\" && echo 'Format complete.'",
        "lint": "eslint --fix . && echo 'Lint complete.'",
        "check-all": "npm run format && npm run lint && echo 'Lint and format complete'"
    },
    "pre-commit": [
        "check-all"
    ],
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
